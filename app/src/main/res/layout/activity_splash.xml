<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/bulb"
        android:layout_width="@dimen/dimen_100"
        android:layout_height="@dimen/dimen_100"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_100"
        android:src= "@drawable/rotate_bulb">
    </ImageView>

    <TextView
        android:id="@+id/motto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginTop="25dp"
        android:layout_below="@id/bulb"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#2E77BB"
        android:text="Converting A Sheet\n of Paper Into\n Useful Insights">
    </TextView>

    <Button
        android:id="@+id/letsgo"
        android:layout_width="@dimen/dimen_200"
        android:layout_height="wrap_content"
        android:layout_below="@id/motto"
        android:layout_marginTop="40dp"
        android:layout_centerInParent="true"
        android:background="#9BD4F5"
        android:text="Lets Go"></Button>

    <Button
        android:id="@+id/playdemo"
        android:layout_width="@dimen/dimen_200"
        android:layout_height="wrap_content"
        android:layout_below="@id/letsgo"
        android:layout_marginTop="40dp"
        android:layout_centerInParent="true"
        android:background="#9BD4F5"
        android:text="Play a Demo Game"></Button>
</RelativeLayout>